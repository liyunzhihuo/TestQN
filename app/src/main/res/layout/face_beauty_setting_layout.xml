<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingTop="10dp"
    android:paddingRight="24dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/beauty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="美颜"
            android:textColor="@android:color/white" />

        <SeekBar
            android:id="@+id/beauty_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/beauty_title"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/beauty_title"
            android:max="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/white_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/beauty_title"
            android:layout_alignLeft="@+id/beauty_title"
            android:text="美白"
            android:textColor="@android:color/white" />

        <SeekBar
            android:id="@+id/white_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/white_title"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/white_title"
            android:max="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/redden_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/white_title"
            android:text="红润"
            android:textColor="@android:color/white" />

        <SeekBar
            android:id="@+id/redden_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/redden_title"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/redden_title"
            android:max="10" />
    </LinearLayout>
</LinearLayout>